  "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "Ó¨§",
    "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click": "pavucontrol-qt",
    "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
  },
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
