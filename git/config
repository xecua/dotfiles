[user]
	name = xecua
	email = contact@caffeine.page
	signingkey = 33A065F0
[core]
	editor = nvim
	pager = (delta 2>/dev/null) || ${PAGER:-less}
[init]
	defaultBranch = main
[color]
	ui = auto
[alias]
	cl = clone
	a = add
	p = push
	pf = push --force-with-lease --force-if-includes
	pl = pull --prune
	f = fetch --prune
	m = merge
	mt = mergetool
	mas = !git show-ref --quiet refs/heads/master && git switch master || git switch main
	s = status
	c = commit -am
	amend = commit -a --amend
	co = checkout
	sw = switch
	b = branch
	j = jump
	jm = jump merge
	d = diff
	l = log --date=iso-local
	ls = log --date=iso-local --stat
	lp = log --date=iso-local -p
	g = log --graph --date=short --decorate=short --oneline
	ri = rebase -i
	rs = restore
	rss = restore --staged
	st = stash
	stl = stash list
	sta = stash apply
	stp = stash pop
	std = stash drop
	cf = cat-file -p
[commit]
	gpgsign = true
[rerere]
	enabled = true
[push]
	default = upstream
	autoSetupRemote = true
[pull]
	rebase = true
[delta]
	plus-style = syntax "#012800"
	minus-style = normal "#340001"
	syntax-theme = Monokai Extended
	line-numbers = true
[diff]
	algorithm = histogram
[interactive]
	diffFilter = delta --color-only
[merge]
	tool = nvimdiff
[mergetool]
	keepBackup = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[tig]
	ignore-case = smart-case
	mouse = true
	main-view-id = true
[tig "bind"]
	generic = g move-first-line
	generic = G move-last-line
	main = R !git rebase -i %(commit)
	diff = R !git rebase -i %(commit)
[include]
	path = ~/.gitconfig.local
