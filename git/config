[user]
	name = Shiba Shunta
	email = contact@caffeine.page
	signingkey = 33A065F0
[core]
	editor = nvim
[init]
	defaultBranch = main
[color]
	ui = auto
[alias]
	cl = clone
	a = add
	p = push
	pf = push --force-with-lease --force-if-includes
	pl = pull --prune
	f = fetch --prune
	m = merge
	mc = merge --continue
	ma = merge --abort
	mt = mergetool
	mas = !git show-ref --quiet refs/heads/master && git switch master || git switch main
	s = status
	c = commit -am
	amend = commit -a --amend
	co = checkout
	sw = switch
	b = branch
	j = jump
	jm = jump merge
	d = diff
	dft = difftool
	l = log --date=iso-local
	ls = log --date=iso-local --stat
	lp = log --date=iso-local --remerge-diff
	g = log --graph --date=short --pretty=short-oneline
	ri = rebase -i
	rc = rebase --continue
	ra = rebase --abort
	rs = restore
	rss = restore --staged
	st = stash
	stl = stash list
	sta = stash apply
	stp = stash pop
	std = stash drop
	bl = blame
	cp = cherry-pick
	cf = cat-file -p
	cbcopy = !printf "$1" | cbcopy
[pretty]
	short-oneline = %C(auto)%h %Cblue%as %Cgreen%aN%Creset %s %C(auto)%d
[rebase]
	autoStash = true
[commit]
	gpgsign = true
[rerere]
	enabled = true
[push]
	default = upstream
	autoSetupRemote = true
[pull]
	rebase = true
[delta]
	plus-style = syntax "#012800"
	minus-style = normal "#340001"
	syntax-theme = Monokai Extended
	line-numbers = true
[diff]
	algorithm = histogram
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
[merge]
	tool = nvimdiff
	autoStash = true
[mergetool]
	keepBackup = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[tig]
	ignore-case = smart-case
	mouse = true
	main-view-id = true
	refresh-mode = periodic
[tig "bind"]
	generic = g move-first-line
	generic = G move-last-line
	main = R !git rebase -i %(commit)
	main = C !@git cbcopy %(commit)
	diff = R !git rebase -i %(commit)
[include]
	path = ~/.gitconfig.local
