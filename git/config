[user]
	name = Shiba Shunta
	email = contact@caffeine.page
	signingkey = 33A065F0
[core]
	autocrlf = input
	editor = nvim
	quotepath = false
[init]
	defaultBranch = main
[color]
	ui = auto
[alias]
	cl = clone
	a = add
	p = push
	pf = !fish -c get-confirmation && git push --force-with-lease --force-if-includes
	pl = pull --prune
	f = fetch --prune
	m = merge
	mc = merge --continue
	ma = merge --abort
	mt = mergetool
	mas = !git show-ref --quiet refs/heads/master && git switch master || git switch main
	s = status
	c = commit -am
	amend = commit -a --amend
	co = checkout
	sw = switch
	swf = !fish -c 'fzf-git-switch $argv' # 補完を入れられるならswと統合したい
	b = branch
	j = jump
	jm = jump merge
	d = diff
	dft = -c diff.external=difft diff
	ds = -c diff.external=difft show --ext-diff
	dl = -c diff.external=difft log -p --ext-diff
	l = log --date=iso-local
	ls = log --date=iso-local --stat
	lp = log --date=iso-local --remerge-diff
	g = log --graph --date=short --pretty=short-oneline
	ri = rebase -i
	rc = rebase --continue
	ra = rebase --abort
	rs = restore
	rss = restore --staged
	st = stash
	sts = stash show
	stl = stash list
	sta = stash apply
	stp = stash pop
	std = stash drop
	bl = blame
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cf = cat-file -p
[pretty]
	short-oneline = %C(auto)%h %Cblue%as %Cgreen%aN%Creset %s %C(auto)%d
[rebase]
	autoStash = true
[commit]
	gpgsign = true
[rerere]
	enabled = true
[push]
	default = upstream
	autoSetupRemote = true
[pull]
	rebase = true
[stash]
	showPatch = true
[diff]
	algorithm = histogram
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$MERGED" "$LOCAL" "abcdef1" "100644" "$REMOTE" "abcdef2" "100644"
[pager]
	difftool = true
[merge]
	tool = nvimdiff
	autoStash = true
[mergetool]
	keepBackup = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[url "git@github.com"]
	pushInsteadOf = https://github.com/
[tig]
	ignore-case = smart-case
	mouse = true
	main-view-id = true
	refresh-mode = periodic
[tig "bind"]
	generic = g move-first-line
	generic = G move-last-line
	main = R !git rebase -i %(commit)
	main = C "@printf '\\e]52;;'$(echo -n $1|base64)'\\e\\\\'"
	diff = R !git rebase -i %(commit)
[ghq]
	root = ~/Documents/repos
[include]
	path = ~/.gitconfig.local
