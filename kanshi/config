profile laptop-single {
    output eDP-1 enable mode 1920x1200 position 0,0 scale 1.0
}

profile laptop-home {
    output HDMI-A-1 enable mode 1920x1080 position 0,0
    output eDP-1 enable mode 1920x1200 position 0,1080 scale 1.2
}

profile desktop-default {
    output DP-1 enable mode 1920x1080 position 0,0
    output HDMI-A-1 enable mode 1920x1080 position 1920,0
}
